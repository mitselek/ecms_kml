block vars
    -
        var entities = F.entities

        if (entities) {
            entities.sort(function (a, b) {
                if (a.displayname < b.displayname) {
                    return -1
                } else if (a.displayname > b.displayname) {
                    return 1
                } else {
                    return 0
                }
            })
        }


doctype html
html(lang='et')
    head
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        meta(property='og:url', content='https://polska.ee/' + page.path + '/')
        meta(property='og:title', content=title || page.title)
        meta(property='og:image', content=image || 'https://polska.ee/assets/images/polska-logo-square.png')
        meta(property='og:description', content=description)

        title= title || page.title

        link(href='https://fonts.googleapis.com/css?family=PT+Sans:400,400i,700,700i', rel='stylesheet', type='text/css')
        link(href='/assets/css/bootstrap.min.css', rel='stylesheet', type='text/css')
        link(href='/style.css', rel='stylesheet', type='text/css')

        script(type='application/javascript').
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
            (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
            ga('create', 'UA-260765-38', 'auto');
            ga('send', 'pageview');

    body
        #map-container.container-fluid
            .row
                #map.col-xs-12

        #content.container-fluid
            .row
                .container
                    .row
                        .margin.col-xs-4.col-xs-offset-4.col-sm-2.col-sm-offset-0
                            a(href='/')
                                img.img-responsive(src='/assets/images/polska-logo.png', alt='logo')

                        block content
                            if entities
                                .margin.col-xs-12.col-sm-8.col-md-7.col-md-offset-1
                                    .row
                                        each e in entities
                                            a.list-item.col-xs-12(href=e.properties.path.values[0].value + '/', data-geo=e.properties.geo.values[0].value, data-info=e.displayinfo)= e.displayname
            .margin
        block footer

        if image
            .container-fluid
                .row
                    #image.col-xs-12(style="background-image:url('" + image + "')")

        script(src='https://maps.googleapis.com/maps/api/js?key=AIzaSyCLvF-XJHdyb1STAF38EukXHJpoNC_NwqU', type='application/javascript')
        script(src='/assets/js/jquery-3.1.1.min.js', type='application/javascript')
        script(src='/script.js', type='application/javascript')
